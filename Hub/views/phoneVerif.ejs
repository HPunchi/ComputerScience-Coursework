<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/media/logo/t-icon.png"> <!--webpage icon-->
    <link rel="stylesheet" href="css/global.css"> <!-- import CSS scripts-->
    <link rel="stylesheet" href="css/login.css">
    <script src="js/global.js" defer></script> <!--import client JS scripts-->
    <script src="js/phoneVerif.js" defer></script>
    <title>HomeShield Hub</title> <!-- page title -->


    <link rel="stylesheet" href="//cdn.tutorialjinni.com/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.tutorialjinni.com/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
