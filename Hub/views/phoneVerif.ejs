<body>
    <div class="centreXY ttb">  <!-- main central DIV -->
        <object data="media/logo/svgs/zoomed-text+icon.svg" class="midPageLogo"> </object> <!-- logo -->
        <h1 class="pageHeading">Authenticate Phone</h1> <!-- page heading -->
        
        <div id="nameEntry" class="ttb">
            <label id="nameLbl" class="inputLabelStyle">Name:</label>
            <input id="nameInp" class="inputFieldStyle">          
        </div>

        <div id="phoneEntry" class="ttb">
            <label id="phoneLbl" class="inputLabelStyle">Phone Number:</label>
            <div class="phone-input-container">
                <select id='cpick' class="selectpicker countrypicker" onchange="handleCountryChange()" data-flag="true"></select>
                <input id="phoneInp" type="tel" class="inputFieldStyle">
            </div>              
        </div>

       
        <div class="ttb"> 
            <button id="call" type="submit" class="mainButtonStyle" onclick="submitDetails('call')">Call me</button>
            <button id="text" type="submit" class="mainButtonStyle" onclick="submitDetails('text')">Text me</button>
        </div>
    </div>
    
</body>
</html>
